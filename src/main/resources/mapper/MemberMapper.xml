<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.MemberMapper">
    <select id="getMemberById" resultType="Member">
        SELECT * FROM member WHERE id = #{id}
    </select>

    <select id="getAllMembers" resultType="Member">
        SELECT * FROM member
    </select>

    <insert id="insertMember" parameterType="Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member (username, password, name, email)
        VALUES (#{username}, #{password}, #{name}, #{email})
    </insert>

    <update id="updateMember" parameterType="Member">
        UPDATE member
        SET username = #{username}, password = #{password}, name = #{name}, email = #{email}
        WHERE id = #{id}
    </update>

    <delete id="deleteMember" parameterType="int">
        DELETE FROM member WHERE id = #{id}
    </delete>
</mapper>